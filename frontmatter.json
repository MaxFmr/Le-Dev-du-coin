// Here are the default settings for AstroPaper theme. 

// author: ""
// pubDatetime: ""
// title: ""
// postSlug: ""
// featured: bool
// draft: bool
// tags:
//   - docs
// ogImage: ""
// description:
//   Some rules & recommendations for creating or adding new posts using AstroPaper
//   theme.
// ---



{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Author",
          "name": "author",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "pubDatetime",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "PostSlug",
          "name": "postSlug",
          "type": "slug"
        },
        
        {
          "title": "Featured",
          "name": "featured",
          "type": "boolean"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
     
        {
          "title": "OG Image",
          "name": "ogImage",
          "type": "image"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        }
    
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.preview.host": "http://localhost:3000",
  "frontMatter.content.pageFolders": [
    {
      "path": "[[workspace]]/src/pages",
      "title": "pages"
    },
    {
      "title": "",
      "path": "[[workspace]]/src/content/blog"
    }
  ],
  "frontMatter.taxonomy.tags": [
    "Astro",
    "Blog",
    "ContextAPI",
    "HeadlessCMS",
    "JavaScript",
    "NextJS",
    "ReactJS",
    "Styled-Components",
    "TailwindCSS",
    "TypeScript",
    "astro-paper",
    "color-schemes",
    "configuration",
    "docs",
    "forestry-cms",
    "release"
  ],
  "frontMatter.taxonomy.categories": []
}